<Window x:Class="Tarea3_Registro_Estudiantes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea3_Registro_Estudiantes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

         <StackPanel> 
            
            <Menu>

                <MenuItem Header="Registros" >
                    <MenuItem Header="Carreras" x:Name="rCarreras" Click ="RegistroCarrerasMenuItem_Click" /> <!-- Click ="RegistroCarrerasMenuItem_Click" -->
                    <MenuItem Header="Estudiantes" x:Name="rEstudiantes" Click ="RegistroEstudiantesMenuItem_Click" /> <!-- Click ="RegistroEstudiantesMenuItem_Click" -->
                </MenuItem>

                <MenuItem Header="Consultas" >
                    <MenuItem Header="Carreras" x:Name="cCarreras" />  <!-- Click ="ConsultaCarrerasMenuItem_Click" -->
                    <MenuItem Header="Estudiantes" x:Name="cEstudiantes"  />  <!-- Click ="ConsultaEstudiantesMenuItem_Click" -->
                </MenuItem>
                
            </Menu>

        </StackPanel>

    </Grid>
</Window>
